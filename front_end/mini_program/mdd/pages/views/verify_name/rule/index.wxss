page{
  background: #f3f3f4;
}

.banner image {
  width: 100%;
  height: 150px;
}

.main {
  background-color:#fff;
  margin:-10rpx 34rpx 40rpx 28rpx;
  padding:70rpx 10rpx 0 40rpx;
  border-radius:20rpx;
  border-top-left-radius:0;
  border-top-right-radius:0;
}

.item {
  margin-bottom: 60rpx;
}

.item .h2{
  font-size: 35rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
  color: #3352f5;
}

.item image {
  width: 245rpx;
  height: 38rpx;
  margin-bottom: 5rpx;
}

.item .li {
  line-height: 65rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.item .li view {
  width: 100%;
}

.item .li .num {
  background-color: #3352f5;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  margin-right: 15rpx;
}

.slogan {
  font-weight: 900;
  padding-bottom: 30rpx;
}
.slogan view {
  color: #3352f5;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}