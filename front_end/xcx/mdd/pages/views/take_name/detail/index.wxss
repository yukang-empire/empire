
.header {
  background-color: #2954f9;
  padding: 10rpx 30rpx 120rpx 30rpx;
  position: relative;
  margin-bottom: 70rpx;
}
.header .h2 {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 35rpx;
}
.header .score {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .left {
  color: #999;
}
.header .recommend {
  color: #eee;
  font-size: 26rpx;
}
.header .xin {
  margin-left: 20rpx;
}
.header .xin .solid {
  color: #fff;
}
.header .collect02 {
  color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  background-color: #2147f3;
  padding: 18rpx 40rpx 18rpx 20rpx;
  border-radius: 50rpx;
  position: absolute;
  right: -20rpx;
}
.header .collect02 .iconfont {
  font-size: 26rpx;
  margin-right: 10rpx;
}
.contact {
  padding: 20rpx 0;
  position: absolute;
  bottom: -40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  width: 90%;
  left: 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contact text {
  margin-left: 20rpx;
  font-size: 26rpx;
}
.contact .button {
  background-color: #2147f3;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.article .li {
  margin: 0 5% 30rpx 5%;
  padding: 30rpx 0;
  width: 90%;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}
.article .li .iconfont {
  margin: 0 15rpx 0 20rpx;
  color: #ccc;
}
.article .li .iconfont.have {
  color: #2147f3;
}
.article .li .title {
  display: flex;
  align-items: center;
}
.article .li .find {
  margin-left: 25rpx;
  background-color: #ddd;
  color: #fff;
  font-size: 23rpx;
  padding: 5rpx 8rpx;
}
.article .li .find.have {
  background-color: #2147f3;
}
.article .li .describe {
  margin-top: 20rpx;
  color: #666;
}
.article .li .describe text {
  margin-left: 65rpx;
  font-size: 26rpx;
}
.article .li .describe .tip {
  color: #2147f3;
  margin-left: 40rpx;
}
.article .li .r_t {
  position: absolute;
  top: -35rpx;
  right: -45rpx;
  background-color: #ddd;
  color: #fff;
  font-size: 26rpx;
  padding: 40rpx 50rpx;
  transform: rotate(45deg);
}
.article .li .r_t.have {
  background-color: #2147f3;
}
.article .li .r_t text {
  position: absolute;
  bottom: 5rpx;
  left: 40rpx;
  font-size: 22rpx;
}

.understand {
  text-align: center;
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #666;
}
.understand .iconfont {
  margin-left: 10rpx;
}