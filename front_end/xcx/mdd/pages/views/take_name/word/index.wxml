<view class='header'>
  <view class='collect'>
    <text class='iconfont icon-xingxing'></text>
    <text>我的收藏</text>
  </view>
</view>

<view class='form'>
  <view class='item'>
    <text>字号一</text>
    <view class='select'>
      <input placeholder='您比较喜欢的一个字 必填' value="{{ one }}" bindblur='input_one'></input>
    </view>
  </view>
  <view class='item'>
    <text>字号二</text>
    <view class='select'>
      <input placeholder='您比较喜欢的一个字 选填' value="{{ two }}" bindblur='input_two'></input>
    </view>
  </view>
  <view class='item'>
    <text>字号三</text>
    <view class='select'>
      <input placeholder='您比较喜欢的一个字 选填' value="{{ three }}" bindblur='input_three'></input>
    </view>
  </view>
</view>

<view class='next'>
  <button class='flex' wx:if="{{ !one }}">保存</button>
  <button class='flex' style='background-color: #3352f5;' wx:if="{{ one }}" bindtap='preserve'>保存</button>
</view>
<view class='footer flex'>
  <text style='margin-right: 40rpx;'>返回首页</text>
  <text>在线核名</text>
</view>